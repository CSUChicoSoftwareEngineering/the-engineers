.container
  %h1
    View All Designs
  .search_container
    = form_tag(search_path, method: "get", class: "search_form") do
      %h2
        Search
      .form-group
        %input.form-control{:type => "text", :name => "title", :placeholder => "Design Name"}
      .form-group
        %input.form-control{:type => "text", :name => "author", :placeholder => "Author Name"}
      .form-group
        %input.form-control{:type => "text", :name => "date", :placeholder => "Date Posted"}
      %input.form-control.btn.btn-primary{:type => "submit", :value => "Search"}
      %input.form-control.btn{:type => "reset", :value => "Clear"}
  .row
    - @designs.each do |design|
      .col-md-2
        .thumbnail
          %a{:href => design_path(design.id)}
            %img{:src => design.imagefilepath}
          .caption
            %h2
              %a{:href => design_path(design.id)}
                = design.title
            %p
              = design.sdesc
            .row
              %a.col-md-8.col-md-push-2.btn.btn-primary.btn-sm{:href => design_path(design.id)}
                View details
