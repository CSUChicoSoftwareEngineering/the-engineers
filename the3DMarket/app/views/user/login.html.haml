.container
  %div.login_box.col-md-4.col-md-push-4
    = form_tag(:action => @user_login_path, :class => "login_form") do
      - if cookies[:error].present?
        %div.error.alert.alert-danger
          = cookies[:error]
          - cookies[:error] = nil
      - if @user.present?
        %div.alert.alert-info
          You're already logged in as
          = @user.username
      - else
        %h2
          Login
        .form-group
          %input.form-control.username{:type => "text", :name => "username", :placeholder => "username"}
        .form-group
          %input.form-control.password{:type => "password", :name => "password",:placeholder => "password"}
      - if @user.present?
        .form-group
          %input.form-control.btn.btn-primary{:type => "submit", :value => "Logout"}
      - else
        .form-group
          %input.form-control.btn.btn-primary{:type => "submit", :value => "Login"}
        .form-group
          %a{:href => u_create_path}
            Don't have an account? Sign up now!

