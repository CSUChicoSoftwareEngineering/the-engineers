%div.main
  %div.login_box
    = form_tag(action: @user_login_path,class: "login_form") do
      %div.heading
        Welcome to the 3D-Marketplace
      %div.error
        - if cookies[:error].present?
          = cookies[:error]
          - cookies[:error] = nil
      %div.content
        - if @user.present?
          %div.content_row
            You're already logged in as
            = @user.username
        - else
          %div.content_row
            %div.content_value
              %input.username{:type =>"text", :name =>"username", :placeholder =>"username"}
          %div.content_row
            %div.content_value
              %input.password{:type =>"password", :name =>"password",:placeholder =>"password"}
      %div.buttons
        - if @user.present?
          %input{"type"=>"submit", "value"=>"Log Out!"}
        - else
          %input{"type"=>"submit", "value"=>"Log In!"}
